<Window x:Class="ExcelBinder.Views.AIAssistantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Template Assistant" Height="650" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Chat UI -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="AI Conversation" FontSize="18" FontWeight="Bold" Margin="5,0,0,15" Foreground="{StaticResource PrimaryBrush}"/>

            <Border Grid.Row="1" Background="{StaticResource LightBackgroundBrush}" CornerRadius="8" Padding="5" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <ItemsControl ItemsSource="{Binding ChatHistory}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{Binding Background}" CornerRadius="10" Padding="12,8" Margin="5" HorizontalAlignment="{Binding Alignment}" MaxWidth="320">
                                <StackPanel>
                                    <TextBlock Text="{Binding Role}" FontSize="10" FontWeight="Bold" Margin="0,0,0,5" Opacity="0.7"/>
                                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" LineHeight="18"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <TextBox Grid.Row="2" Text="{Binding UserPrompt, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" Height="100" Margin="0,15,0,0" Padding="10" AcceptsReturn="True" VerticalContentAlignment="Top">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Modifiers="Control" Command="{Binding SendCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="{StaticResource MutedTextBrush}" FontStyle="Italic" Margin="5,0,0,0"/>
                <Button Grid.Column="1" Content="Send (Ctrl+Enter)" Style="{StaticResource PrimaryButton}" Command="{Binding SendCommand}" Width="140" Height="36"/>
            </Grid>
        </Grid>

        <!-- Right: Preview UI -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Template Preview (.liquid)" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryBrush}"/>
            
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <TextBox Text="{Binding GeneratedTemplate}" FontFamily="Consolas" FontSize="13" Padding="15"
                         IsReadOnly="False" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" BorderThickness="0"/>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Apply to Feature" Style="{StaticResource SecondaryButton}" 
                        Command="{Binding ApplyCommand}" Width="180" Height="40"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
