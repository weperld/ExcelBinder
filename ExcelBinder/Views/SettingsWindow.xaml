<Window x:Class="ExcelBinder.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExcelBinder Settings" Height="600" Width="850" WindowStartupLocation="CenterOwner">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock Text="Global Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,25" Foreground="{StaticResource PrimaryBrush}"/>
            <Button Content="GitHub Repository" Click="OnGitHubClick" Height="28" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Padding="15,0" Cursor="Hand" Background="Transparent" BorderBrush="{StaticResource PrimaryBrush}" Foreground="{StaticResource PrimaryBrush}"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Management -->
                <StackPanel Margin="0,0,20,0">
                    <GroupBox Header="Feature Definition Management">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Primary Scan Folder" FontWeight="SemiBold"/>
                                <Button Style="{StaticResource HelpButtonStyle}" ToolTipService.ToolTip="{StaticResource PrimaryScanFolderHelp}"/>
                            </StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Settings.FeatureDefinitionsPath, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseFeatureDefinitionsPathCommand}" Width="80" Margin="10,0,0,0"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,8">
                                <TextBlock Text="Additional Bound Sources" FontWeight="SemiBold"/>
                                <Button Style="{StaticResource HelpButtonStyle}" ToolTipService.ToolTip="{StaticResource AdditionalBoundSourcesHelp}"/>
                            </StackPanel>
                            <ListBox ItemsSource="{Binding Settings.BoundFeatures}" Height="180" Background="{StaticResource LightBackgroundBrush}" BorderThickness="0" Margin="0,0,0,10" VirtualizingPanel.ScrollUnit="Pixel">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="0,2" Padding="8,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                <Button Grid.Column="1" Content="Remove" Command="{Binding DataContext.RemoveBoundFeatureCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}" Width="60" Height="22" FontSize="10" Margin="10,0,0,0" Foreground="{StaticResource DangerBrush}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="+ Add Folder" Command="{Binding BindFeatureFolderCommand}" Width="100" Height="30" Margin="0,0,10,0"/>
                                <Button Content="+ Add File" Command="{Binding BindFeatureCommand}" Width="100" Height="30"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>

                <!-- Update Settings -->
                <StackPanel Grid.Column="1">
                    <GroupBox Header="Update Settings" Margin="0,10,0,10">
                        <StackPanel>
                            <CheckBox Content="앱 시작 시 자동으로 업데이트 확인"
                                      IsChecked="{Binding Settings.CheckForUpdatesOnStartup}" Margin="0,0,0,10"/>
                            <Button Content="지금 업데이트 확인" Command="{Binding CheckForUpdateCommand}" Width="150" Height="30" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Live Preview (Loaded Features)" Height="260">
                        <ListBox ItemsSource="{Binding Features}" BorderThickness="0" Background="Transparent" VirtualizingPanel.ScrollUnit="Pixel">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,7">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="17"/>
                                            <TextBlock Text="{Binding Id}" FontSize="13" Foreground="{StaticResource MutedTextBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,10,0,0">
            <Button Content="Save &amp; Apply Changes" Style="{StaticResource SecondaryButton}"
                    Command="{Binding SaveSettingsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="200" Height="40" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
