<Window x:Class="ExcelBinder.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExcelBinder Settings" Height="600" Width="850" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Global Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source Management -->
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="1. Primary Feature Folder (Auto-scan)" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Settings.FeatureDefinitionsPath, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                    <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseFeatureDefinitionsPathCommand}" Width="80" Margin="10,0,0,0"/>
                </Grid>
                <TextBlock Text="Any .json files here are automatically loaded." FontSize="11" Foreground="#888" Margin="0,5,0,0"/>

                <TextBlock Text="2. Additional Source Paths" FontWeight="Bold" Margin="0,15,0,5"/>
                <ListBox ItemsSource="{Binding Settings.BoundFeatures}" Height="150">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="11" TextWrapping="NoWrap"/>
                                <Button Grid.Column="1" Content="Remove" Command="{Binding DataContext.RemoveBoundFeatureCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Width="55" Height="20" FontSize="10" Margin="5,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Content="+ Folder" Command="{Binding BindFeatureFolderCommand}" Width="70" Height="25" Margin="0,0,5,0"/>
                    <Button Content="+ File" Command="{Binding BindFeatureCommand}" Width="70" Height="25"/>
                </StackPanel>
            </StackPanel>

            <!-- Preview & AI Settings -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Detected Features (Live Preview)" Padding="5">
                    <ListBox ItemsSource="{Binding Features}" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Id}" FontSize="10" Foreground="#666"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="AI Settings (Template Generator)" Margin="0,10,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="OpenAI API Key" FontWeight="Bold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ApiKeyBox" PasswordChar="*" Padding="5" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Claude API Key" FontWeight="Bold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ClaudeApiKeyBox" PasswordChar="*" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Model" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox SelectedValue="{Binding Settings.AiModel}" SelectedValuePath="Content" IsEditable="True">
                            <ComboBoxItem Content="gpt-5.2"/>
                            <ComboBoxItem Content="gpt-5.1"/>
                            <ComboBoxItem Content="gpt-5"/>
                            <ComboBoxItem Content="gpt-5-mini"/>
                            <Separator/>
                            <ComboBoxItem Content="o3-mini"/>
                            <ComboBoxItem Content="o1"/>
                            <ComboBoxItem Content="o1-mini"/>
                            <Separator/>
                            <ComboBoxItem Content="gpt-4.1"/>
                            <ComboBoxItem Content="gpt-4o"/>
                            <ComboBoxItem Content="gpt-4o-mini"/>
                            <Separator/>
                            <ComboBoxItem Content="claude-3-5-sonnet-latest"/>
                            <ComboBoxItem Content="claude-3-5-haiku-latest"/>
                            <ComboBoxItem Content="claude-3-opus-latest"/>
                            <Separator/>
                            <ComboBoxItem Content="gpt-4-turbo"/>
                            <ComboBoxItem Content="gpt-3.5-turbo"/>
                        </ComboBox>
                        <TextBlock Text="API Key is stored locally in settings.json" FontSize="11" Foreground="#888" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save &amp; Close" Command="{Binding SaveSettingsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="120" Height="35" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
